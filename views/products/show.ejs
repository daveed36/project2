<!DOCTYPE html>
<html lang="en" dir="ltr">
  <head>
    <%- include ('../partials/head.ejs') %>
  </head>
  <body>
    <nav>
      <%- include ('../partials/nav.ejs') %>
    </nav>
    <div class="container">
        <div class="jumbo">
          <h3><%= product.name  %></h3>
            <img src="<%= product.img %>" alt="An image of <%= product.name %>" class="jumbo-img" />
            <p><%=product.description %></p>
            <% if(product.qty <= 0) { %>
              <h4>OUT OF STOCK</h4>
            <% } else { %>
              <h6>Only <%= product.qty %> remaining</h6>
              <form action="/products/<%=product.id%>/buy?_method=put" method="POST">
                <button type="submit">BUY</button>
              </form>
            <% } %>
            <h4>Price: $<%= product.price %></h4>
        </div>
        <div class="admin-actions">
          <a href="/products/<%=product.id%>/edit"><button type="button" name="button" class="edit-button">Edit</button></a>
          <form action="/products/<%=product.id%>?_method=DELETE" method="POST">
            <button type="submit" class="delete-button">DELETE</button>
          </form>
        </div>
    </div>
  </body>
</html>
